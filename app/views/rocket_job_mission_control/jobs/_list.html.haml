.col-md-4.job-list
  .filter.pull-right.btn-group.btn-group-justified{ style: 'padding: 1px 1px 1px 1px;', data: { toggle: 'buttons' } }
    - %w( queued running failed completed ).each do |state|
      %label.btn.btn-default.state-toggle{ class: ('active' if @states.include?(state.to_s) || @states.empty?) }
        = check_box_tag(state, state, (@states.include?(state.to_s) || @states.empty?))
        %i.fa{class: job_state_icon(state.to_sym)}
        = state.capitalize
  .clearfix
  .list
    - if jobs.empty?
      .card.inner
        .title
          .lead.text-center No Jobs Found.
    - else
      - jobs.each do |job|
        = link_to job_path(id: job.id, states: @states), class: 'card' do
          .inner
            .title
              .lead{class: job_selected_class(job, @job)}
                %i.fa{class: job_state_icon(job.state)}

                = job_title(job)

            .description= job.description.try(:truncate, 50)
            .info
              .duration.pull-left
                - if job.failed?
                  %i.fa.fa-bomb
                  failed
                - else
                  %i.fa.fa-clock-o
                  = job_duration(job)
              - if job.running?
                .progress.pull-right
                  .progress-bar{ style: "width: #{job.percent_complete}%;", title: "#{job.percent_complete}% percent complete."}
