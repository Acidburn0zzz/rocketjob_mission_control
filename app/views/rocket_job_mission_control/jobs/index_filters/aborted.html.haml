.job-list
  .list
    .row
      .col-sm-10
        %h2 Aborted Jobs
      .col-sm-2
        .btn.btn-default.pull-right.dt-reload{ data: { behavior: 'reload' } }
          %i.fa.fa-refresh
    %table.table.datatable.jobs-datatable{ style: "width: 100%", data: { source: "#{aborted_jobs_url(format: 'json')}", column_num: 3 } }
      %thead
        %tr
          %th Class
          %th Description
          %th Aborted
      %tbody
