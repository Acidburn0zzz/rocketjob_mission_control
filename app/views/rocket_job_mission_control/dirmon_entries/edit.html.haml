#queue

  = render partial: 'list', locals: { jobs: @jobs }

  .col-md-4
    %h1 Edit
    = form_for @dirmon_entry, url: dirmon_entry_path, method: :patch do |f|
      = f.clarity_text_field :name, required: true
      = f.clarity_text_field :path, required: true
      = f.clarity_text_field :job_name, required: true
      = f.clarity_text_field :arguments, required: true
      = f.clarity_text_area :properties, :rows => "5"
      .col-md-6
      = f.submit :class => "btn btn-primary"
      = link_to 'Cancel', url_for(action: :index), class: 'btn btn-default'


